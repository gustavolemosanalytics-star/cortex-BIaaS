// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("cortex_accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("cortex_sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  isDeveloper   Boolean   @default(false)
  stripeAccountId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  dashboards    Dashboard[]
  integrations  Integration[]
  templates     Template[]
  purchases     TemplatePurchase[]
  reviews       TemplateReview[]

  @@map("cortex_users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("cortex_verification_tokens")
}

// Application Models
model Dashboard {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  isPublished Boolean  @default(false)
  isPublic    Boolean  @default(false)
  password    String?
  expiresAt   DateTime?
  template    String?
  layout      Json     @default("{}")

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  widgets     Widget[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([slug])
  @@map("cortex_dashboards")
}

model Widget {
  id          String   @id @default(cuid())
  type        String   // 'kpi', 'line', 'bar', 'pie', 'table', 'funnel'
  title       String
  config      Json     @default("{}")
  position    Json     @default("{}")

  dashboardId String
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dashboardId])
  @@map("cortex_widgets")
}

model Integration {
  id           String   @id @default(cuid())
  platform     String   // 'meta', 'google_ads', 'ga4', 'payment'
  accessToken  String   @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime?
  accountId    String?
  accountName  String?
  metadata     Json     @default("{}")

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, platform, accountId])
  @@index([userId])
  @@map("cortex_integrations")
}

model DataCache {
  id         String   @id @default(cuid())
  userId     String
  platform   String
  metric     String
  dateRange  String
  data       Json
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@index([userId, platform, metric])
  @@index([expiresAt])
  @@map("cortex_data_cache")
}

// Template Marketplace Models
model Template {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  thumbnail   String?
  category    String   // 'ecommerce', 'saas', 'agency', 'finance', etc.
  tags        String[] // Array of tags for search
  price       Decimal  @db.Decimal(10, 2) // Price in BRL (0.00 = free)
  isFree      Boolean  @default(false)
  isPublished Boolean  @default(false)
  isFeatured  Boolean  @default(false)

  // Template code stored as JSON
  code        Json     // Contains widget configurations, layout, etc.
  version     String   @default("1.0.0")

  // Stats
  downloads   Int      @default(0)
  rating      Decimal  @default(0) @db.Decimal(3, 2)
  reviewCount Int      @default(0)

  // Revenue sharing (percentage that goes to platform)
  platformFee Decimal  @default(30) @db.Decimal(5, 2)

  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  purchases   TemplatePurchase[]
  reviews     TemplateReview[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId])
  @@index([slug])
  @@index([category])
  @@index([isPublished, isFeatured])
  @@map("cortex_templates")
}

model TemplatePurchase {
  id          String   @id @default(cuid())

  templateId  String
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  price       Decimal  @db.Decimal(10, 2)
  platformFee Decimal  @db.Decimal(10, 2)
  authorEarnings Decimal @db.Decimal(10, 2)

  paymentId   String?  // Payment provider transaction ID
  paymentStatus String @default("pending") // 'pending', 'completed', 'failed', 'refunded'

  createdAt   DateTime @default(now())

  @@unique([templateId, userId])
  @@index([userId])
  @@index([templateId])
  @@map("cortex_template_purchases")
}

model TemplateReview {
  id         String   @id @default(cuid())

  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  rating     Int      // 1-5 stars
  comment    String?  @db.Text

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([templateId, userId])
  @@index([templateId])
  @@index([userId])
  @@map("cortex_template_reviews")
}
